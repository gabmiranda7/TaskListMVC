@{
}

<h2>Essa é a index da minha TaskList</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descrição</th>
            <th>Data de Início</th>
            <th>Data de Fim</th>
            <th>Editar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.DataInicio</td>
                <td>@item.DataFim</td>
                <td><a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a></td>
            </tr>
        }
    </tbody>
</table>