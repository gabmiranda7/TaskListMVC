@model Tarefa;

<form method="post" asp-action="Create" asp-controller="Tarefa">
@*     @{
        if (ViewBag.Mensagem != null)
        {
            <div>
                <span class="text-success">@ViewBag.Mensagem</span>
            </div>
        }
    } *@

    <div class="d-flex" style="gap: 25px">
        <input type="hidden" asp-for="@Model.Id" />
        <div>
            <div>
                <label asp-for="Descricao" class="form-label"></label>
            </div>
            <div>
                <input type="text" asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="d-flex" style="gap: 25px">
        <div>
            <div>
                <label asp-for="DataInicio" class="form-label"></label>
            </div>
            <div>
                <input type="date" asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div>
                <label asp-for="DataFim" class="form-label"></label>
            </div>
            <div>
                <input type="date" asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group-row" style="width:100%">
        <label asp-for="CategoriaId" class="form-label"></label>
    </div>
    <div>
        <select class="form-select" asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control"></select>
        <option value="">Selecione uma Categoria</option>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group-row" style="width:100%">
        <label asp-for="PrioridadeId" class="form-label"></label>
    </div>
    <div>
        <select class="form-select" asp-for="PrioridadeId" asp-items="ViewBag.Prioridades" class="form-control"></select>
        <option value="">Selecione uma Prioridade</option>
        <span asp-validation-for="PrioridadeId" class="text-danger"></span>
    </div>
    <div class="form-group-row" style="width:100%">
        <label asp-for="ResponsavelId" class="form-label"></label>
    </div>
    <div>
        <select class="form-select" asp-for="ResponsavelId" asp-items="ViewBag.Responsaveis" class="form-control"></select>
        <option value="">Selecione um Responsável</option>
        <span asp-validation-for="ResponsavelId" class="text-danger"></span>
    </div>
    <div class="form-group-row" style="width:100%">
        <label asp-for="StatusId" class="form-label"></label>
    </div>
    <div>
        <select class="form-select" asp-for="StatusId" asp-items="ViewBag.Status" class="form-control"></select>
        <option value="">Selecione um Status</option>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>
    <div>
        <div>
            <label asp-for="Observacao" class="form-label"></label>
        </div>
        <div>
            <input type="text" asp-for="Observacao" class="form-control" />
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>
    <div>
        <button class="btn btn-primary">Salvar</button>
    </div>
</form>

@section Scripts {
    <script>
        const mensagem = "@ViewBag.Mensagem"

        if (mensagem != "") {
            alert(mensagem);
        }
    </script>
}